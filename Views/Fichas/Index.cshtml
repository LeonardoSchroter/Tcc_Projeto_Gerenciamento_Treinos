@model IEnumerable<Projeto_gerencia_treinos_musculacao.Models.Ficha>

@{
    ViewData["Title"] = "Fichas de Treino";
}

<h1 class="h3 mb-2 text-gray-800">Fichas de Treino</h1>

@if (User.IsInRole("Admin") || User.IsInRole("Personal"))
{
    <p class="mb-4">Aqui você pode gerenciar todas as fichas de treino cadastradas para os alunos.</p>

    <p>
        <a asp-action="Create" class="btn btn-primary btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-plus"></i>
            </span>
            <span class="text">Criar Nova Ficha</span>
        </a>
    </p>
}

@if (User.IsInRole("Aluno"))
{
    <p class="mb-4">Aqui você pode visualizar todas as fichas de treino cadastradas para você.</p>
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Fichas Cadastradas</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered dt-responsive" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Nome)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Aluno)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Personal)
                        </th>
                        <th>
                            Vigência
                        </th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nome)
                            </td>
                            <td>
                                @(item.Aluno?.Nome ?? "N/A")
                            </td>
                            <td>
                                @(item.Personal?.Nome ?? "N/A")
                            </td>
                            <td>
                                @item.DataInicio.ToString("dd/MM/yyyy") a @item.DataFim.ToString("dd/MM/yyyy")
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-circle btn-sm" title="Detalhes">
                                    <i class="fas fa-eye"></i>
                                </a>
                                @if (User.IsInRole("Admin") || User.IsInRole("Personal"))
                                {

                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-circle btn-sm" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-circle btn-sm" title="Excluir">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable({
                // Adiciona a tradução para Português-Brasil
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.6/i18n/pt-BR.json"
                },

                responsive: true,
                columnDefs: [
                    {
                        targets: 0,
                        responsivePriority: 1
                    },
                    {
                        targets: 1,
                        responsivePriority: 2 ,
                        targets: 4,
                        responsivePriority: 3,
                        orderable: false
                    }

                ]
            });
        });
    </script>
}