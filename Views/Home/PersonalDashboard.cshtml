@model Projeto_gerencia_treinos_musculacao.ViewModels.PersonalDashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Dashboard do Personal</h1>
</div>

<div class="row">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total de Alunos</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalAlunos</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-users fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Fichas Ativas</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.FichasAtivas</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Fichas a Expirar (7 dias)</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.FichasExpirandoCount</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-calendar-times fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-danger shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">Alunos sem Ficha</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.AlunosSemFichaCount</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-exclamation-triangle fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-lg-7">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Fichas Vencendo em Breve</h6>
            </div>
            <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                @if (Model.FichasExpirandoList.Any())
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var ficha in Model.FichasExpirandoList)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>@ficha.Nome</strong> para @ficha.Aluno.Nome
                                    <br>
                                    <small class="text-muted">Vence em: @ficha.DataFim.ToShortDateString()</small>
                                </div>
                                <a asp-controller="Fichas" asp-action="Edit" asp-route-id="@ficha.Id" class="btn btn-sm btn-warning">Renovar</a>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p>Nenhuma ficha irá expirar nos próximos 7 dias.</p>
                }
            </div>
        </div>

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-danger">Alunos Aguardando Ficha</h6>
            </div>
            <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                @if (Model.AlunosSemFichaList.Any())
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var aluno in Model.AlunosSemFichaList)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <i class="fas fa-user-clock text-gray-500 mr-2"></i>
                                    <strong>@aluno.Nome</strong>
                                </div>
                                <a asp-controller="Fichas" asp-action="Create" asp-route-alunoId="@aluno.Id" class="btn btn-sm btn-success">
                                    <i class="fas fa-plus"></i> Criar Ficha
                                </a>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p>Todos os seus alunos possuem uma ficha de treino</p>
                }
            </div>
        </div>
    </div>

    <div class="col-lg-5">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Ações Rápidas</h6>
            </div>
            <div class="card-body">
                <a asp-controller="Fichas" asp-action="Create" class="btn btn-primary btn-icon-split btn-block mb-2">
                    <span class="icon text-white-50"><i class="fas fa-plus"></i></span>
                    <span class="text">Criar Nova Ficha</span>
                </a>
                <a asp-controller="Alunos" asp-action="Index" class="btn btn-info btn-icon-split btn-block mb-2">
                    <span class="icon text-white-50"><i class="fas fa-users"></i></span>
                    <span class="text">Ver Todos os Alunos</span>
                </a>
                <a asp-controller="Exercicios" asp-action="Index" class="btn btn-secondary btn-icon-split btn-block">
                    <span class="icon text-white-50"><i class="fas fa-dumbbell"></i></span>
                    <span class="text">Gerenciar Exercícios</span>
                </a>
            </div>
        </div>
    </div>
</div>