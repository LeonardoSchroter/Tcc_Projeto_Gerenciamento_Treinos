@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "Gerenciamento de Usuários";
}

<h1 class="h3 mb-2 text-gray-800">@ViewData["Title"]</h1>
<p class="mb-4">Gerencie os usuários e seus perfis de acesso ao sistema.</p>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Usuários Cadastrados</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered dt-responsive" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Usuário</th>
                        <th>Email</th>
                        <th>Perfis (Roles)</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>@string.Join(", ", user.Roles)</td>
                            <td>
                                <a asp-action="ManageRoles" asp-route-userId="@user.Id" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Gerenciar Perfis
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable({
                "language": { "url": "//cdn.datatables.net/plug-ins/1.13.6/i18n/pt-BR.json" },

                responsive: true,
                columnDefs: [
                    {
                        targets: 0,
                        responsivePriority: 1
                    },
                    {
                        targets: 3,
                        responsivePriority: 2,
                        orderable: false
                    },
                    {
                        targets: 2,
                        responsivePriority: 3
                    }
                ]
            });
        });
    </script>
}