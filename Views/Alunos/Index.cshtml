@model IEnumerable<Projeto_gerencia_treinos_musculacao.Models.Usuario>

@{
    ViewData["Title"] = "Lista de Alunos";
}

<h1 class="h3 mb-2 text-gray-800">Alunos</h1>
<p class="mb-4">Aqui você pode visualizar seus alunos.</p>


<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Alunos</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered dt-responsive" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Nome)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            Celular
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.6/i18n/pt-BR.json"
                },

                responsive: true,
                columnDefs: [
                    {
                        targets: 0,
                        responsivePriority: 1
                    }
                ]
            });
        });
    </script>
}